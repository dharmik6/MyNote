<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.BottomToolbarFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/create_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:tint="@color/white"
        android:src="@drawable/plus"
        android:backgroundTint="@color/primary_base"
        app:rippleColor="@color/primary_dark"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottom_bar" />
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_bottom_bar"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_10dp"
        android:paddingVertical="@dimen/_5dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/note_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10dp"
            app:tint="@color/black"
            android:background="@drawable/ripple_effect"
            android:src="@drawable/light_bulb" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/note_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10dp"
            app:tint="@color/black"
            android:background="@drawable/ripple_effect"
            android:src="@drawable/shopping_cart" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/note_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10dp"
            app:tint="@color/black"
            android:background="@drawable/ripple_effect"
            android:src="@drawable/sparkles" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/note_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10dp"
            app:tint="@color/black"
            android:background="@drawable/ripple_effect"
            android:src="@drawable/clipboard_list" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>