<!--    button-->
    <style name="Button.Small.Fill" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/_120dp</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="cornerRadius">@dimen/_8dp</item>
        <item name="android:background">@drawable/bg_button_gradient</item>
        <item name="backgroundTint">@null</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/_12dp</item>
        <item name="rippleColor">@color/primary_base</item>
        <item name="android:paddingBottom">@dimen/_12dp</item>
        <item name="android:layout_marginTop">@dimen/_8dp</item>
        <item name="android:layout_marginBottom">@dimen/_8dp</item>
    </style>

    <style name="Button.Simple.ColorFul" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_base</item>
        <item name="fontFamily">@font/sora_regular</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:paddingVertical">@dimen/_10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/_100dp</item>
        <item name="android:padding">@dimen/_12dp</item>
    </style>

    <style name="Button.Small.colorful.Stroke" parent="Widget.Material3.Button">
        <item name="strokeColor">@color/primary_base</item>
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">@color/background</item>
        <item name="fontFamily">@font/sora_regular</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:padding">@dimen/_12dp</item>
        <item name="android:textColor">@color/primary_base</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/sora_bold</item>
    </style>

    <!--    bottom sheet-->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--    window animation-->
    <style name="WindowAnimationFadeInOut">
        <item name="android:windowEnterTransition">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <!--    round image -->
    <style name="RoundImage.50" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="RoundImage.10" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>


