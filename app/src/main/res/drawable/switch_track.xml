<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_base" /> <!-- Replace with your color -->
            <corners android:radius="20dp" />

        </shape>
    </item>
    <!-- Unchecked state -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_light" /> <!-- Replace with your color -->
            <corners android:radius="20dp" /> <!-- Add corner radius if needed -->

        </shape>
    </item>
</selector>
